{
  "name": "techsolutions/m-pesa",
  "description": "MPesa package for laravel",
  "keywords": [
    "techsolutions",
    "mpesa"
  ],
  "autoload": {
    "psr-4": {
      "Techsolutions\\MPesa\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Techsolutions\\MPesa\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Paulo Maculuve",
      "email": "paulomaculuve758@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.0",
    "illuminate/support": "^11.0",
    "ext-openssl": "*",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "orchestra/testbench": "^9.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  }
}
